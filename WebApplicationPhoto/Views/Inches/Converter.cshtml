<!DOCTYPE html>
<html>



<head>
    <style>
        import url('https://fonts.googleapis.com/css2?family=Bree+Serif&family=Caveat:wght@400;700&family=Lobster&family=Monoton&family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Playfair+Display+SC:ital,wght@0,400;0,700;1,700&family=Playfair+Display:ital,wght@0,400;0,700;1,700&family=Roboto:ital,wght@0,400;0,700;1,400;1,700&family=Source+Sans+Pro:ital,wght@0,400;0,700;1,700&family=Work+Sans:ital,wght@0,400;0,700;1,700&display=swap');



        * {
            box-sizing: border-box;
            margin: 0;
        }



        body {
            background-color: deepskyblue;
        }



            body > div {
                display: flex;
                justify-content: space-around;
                padding: 20px;
            }



        .main {
            display: flex;
        }



            .main input {
                width: 50%;
                margin-right: 10px;
                font-size: 30px;
                border-radius: 5px;
                padding: 0 10px;
                text-align: right;
            }
    </style>
</head>



<body>
    <div>
        <div class="main">
            <input type="text" id="inch-id">
            <h1>Inch</h1>
        </div>
        <div class="main">
            <input type="text" id="cm-id">
            <h1>cm</h1>
        </div>
    </div>
    <script>
        let inchEl = document.getElementById("inch-id");
        let cmEl = document.getElementById("cm-id");



        inchEl.addEventListener("keyup", function (event) {
            let valueOut = event.target.value;
            cmEl.value = valueOut * 2.54;
            if (event.target.value === "") {
                cmEl.value = "";
            }
        });
        cmEl.addEventListener("keyup", function (event) {
            let valueOut = event.target.value;
            inchEl.value = valueOut / 2.54;
            if (event.target.value === "") {
                inchEl.value = "";
            }
        });
    </script>
</body>
</html>